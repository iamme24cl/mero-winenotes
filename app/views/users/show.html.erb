<% if @user == current_user %>
  <div class="form container mt-5">
    <div class="row">
      <div class="col text-center fs-3 mb-3">
        <h3><%= @user.name.titleize %></h3>
        <h3><%= @user.email %></h3>
      </div>
    </div>
    
    <div class="container mt-2">
      <div class="row justify-content-center">
        <div class="col text-center">
          <a href="/users/<%= @user.id %>/edit" class="btn btn-light mb-3">Edit Profile</a>
          <form method="POST" action="/users/<%= @user.id %>/delete">
            <!--If enabled, MethodOverride overrides the form method (in this case, POST) with the HTTP verb specified by the hidden field's value-->
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input class="btn btn-light mb-3 ms-3" type="submit" value="Delete Account">
          </form>
        </div>
      </div>
    <div>
  </div>
<% else %>
  <div class="container mt-3">
    <div class="row mb-3">
      <div class="col text-center fs-2">
        <h2><%= @user.name.titleize %>'s Wines</h2>
      </div>
    </div>

    <div class="row">
      <% @user.wines.each do |wine| %>
        <div class="wine-card col-md-4 text-center mb-3">
          <a href="/wines/<%= wine.id %>">
            <img src="<%= wine.image_url %>" alt="<%= wine.name %>" class="img-thumbnail">
          </a>
         
          <h5 class="mt-2"><a href="/wines/<%= wine.id %>"><%= wine.name.titleize %></a></h5>
          <ul>
            <li>Varietal - <%= wine.varietal.titleize %></li>
            <li>Appelation -	<%= wine.appelation.titleize %></li>
            <li>Vintage - <%= wine.vintage %></li>
            <li>Price - $<%= wine.price %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
<% end %>



    
  
