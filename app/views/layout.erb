  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>MeroWinenotes</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />

  </head>
  <body>
    <div class="wrapper">

      <% if flash[:error] %>
        <em class="error"><%= flash[:error] %></em>
      <% end %>

      <% if flash[:message] %>
        <em class="message"><%= flash[:message] %></em>
      <% end %>

      <nav >
        <% if logged_in? %>
          Logged in as: <em style="color:green"><%= current_user.name.titleize %></em> |
          <a href="/wines">My Wines</a> |
          <a href="/users/<%= current_user.id %>">My Profile</a> |
          <a href="/wines/new">Add New Wine</a> |
          <a href="/users">Members</a> | 
          <a href="/logout">Logout</a>
        <% else %> 
          <a href="/users/new">Register</a> |
          <a href="/login">Login</a> 
        <% end %>
      </nav>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>MeroWinenotes</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
